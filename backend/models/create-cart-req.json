{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "create-cart-req",
    "type": "object",
    "properties": {
      "userNum": {"type": "integer"},
      "storeNum": {"type": "integer"},
      "itms": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "itemId" : { "type": "string"},
            "unitType": {
              "type": "string",
              "enum": ["num", "gm", "oz", "lbs", "kg"]
            },      
            "qty" : { "type": "number"},
            "price" : {"type" : "number"}
          },
          "required": [
            "itemId",      
            "qty"
          ]    
        }
      },
      "totalAmt" : { "type": "number"}
    },
    "required": [
      "storeNum",      
      "itms"
    ],
    "additionalProperties": false
  }